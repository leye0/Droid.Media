<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
		<item name="android:textSize">19dp</item>
        <item name="android:typeface">monospace</item>
    </style>
        <style name="AndroidGreen" parent="@style/MainFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFA4C639</item>
    </style>
    <style name="Code" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
		<item name="android:textSize">10dp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CodeBlock">
    	<item name="android:paddingTop">10dp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">10dp</item>
    	<item name="android:background">#cccccc</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">match_parent</item>
    </style>
    <style name="Note" parent="@android:style/TextAppearance.Small">
    	<item name="android:paddingTop">0dp</item>
    	<item name="android:paddingBottom">0dp</item>
    	<item name="android:paddingLeft">0dp</item>
    	<item name="android:paddingRight">0dp</item>
    	<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">8dp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ListItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A4C639</item>
		<item name="android:textSize">15dp</item>
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#777</item>
		<item name="android:textSize">22dp</item>
		<item name="android:typeface">monospace</item>
    </style>
</resources>